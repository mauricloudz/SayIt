<p id="notice"><%= notice %></p>
<div class="text-center">
<p class="my-5">
  <strong>@<%= @tweet.user.username %> said:</strong><br>
  <i>"<%= @tweet.content.html_safe %>"</i>
</p>

<% if @tweet.liking_users.count == 0 %>
  <small>No one likes this :( </small>
<% else %>    
  <small>
    Liked by: <br>
    <% @tweet.liking_users.each do |user| %>
      <%= image_tag(user.avatar, class: 'avatar-in-tweet rounded', title: user.username, data: { toggle: 'tooltip', placement: 'bottom' }) %>
    <% end %>
  </small>
<% end %>
</div>
<br>
<div class="text-center">
<%= link_to 'Back', root_path, class: 'btn-sm btn-primary' %>
</div>

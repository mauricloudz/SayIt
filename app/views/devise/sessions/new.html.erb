<div class="container register shadow">
  <div class="row">
    <div class="col-md-3 register-left">
      <%= image_tag "pngegg.png" %>
      <h3>Welcome</h3>
      <p>Don't You have an account yet?</p>
      <%= button_to "Register", new_registration_path(resource_name), method: :get %>
    </div>
    <div class="col-md-9 register-right">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <h3 class="register-heading">Login to <span class='sayitbutton'>Say It!</span></h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row register-form">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', value: '' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', value: '' %>
                </div>
                <%= f.submit "Log in", class: 'btnRegister', value: 'Login' %>
              </div>
            </div>
          <% end %>
        </div>        
      </div>
    </div>
  </div>
</div>
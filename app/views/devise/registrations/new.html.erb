<div class="container register shadow">
  <div class="row">
    <div class="col-md-3 register-left">
      <%= image_tag "pngegg.png" %>
      <h3>Welcome</h3>
      <p>Already have an account?</p>
      <%= button_to "Login", new_session_path(resource_name), method: :get %>
    </div>
    <div class="col-md-9 register-right">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <h3 class="register-heading">Sign up to <span class='sayitbutton'>Say It!</span></h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row register-form">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'User Name *', value: '' %>
                </div>
                <div class="form-group">
                  <%= f.text_field :avatar, class: 'form-control', placeholder: 'Avatar *', value: '' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password *', value: '' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Repeat Password *', value: '' %>
                  <% if @minimum_password_length %>
                    <small class='text-muted'>(<%= @minimum_password_length %> characters minimum)</small>
                  <% end %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email *', value: '' %>
                </div>
                <%= f.submit "Sign up", class: 'btnRegister', value: 'Register' %>
              </div>
            </div>
          <% end %>
        </div>        
      </div>
    </div>
  </div>
</div>